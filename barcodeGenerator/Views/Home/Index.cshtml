@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Barcode and QR Code generator</h1>
    

    <div class="row">
        <div class="col-12">
            <img src="@Url.Action("GenerateBarcode")" alt="Barcode" />
            <img src="@Url.Action("GenerateQRCode")" alt="QRCode" />
        </div>

        <div class="col-12">
            @using (Html.BeginForm("GenerateBarcode", "Home"))
            {
                <div class="col-6">
                    Code <input name="txtCode" class="form-control" type="text" />
                    <button type="submit" class="btn btn-primary">Barcode</button>

                </div>
            }

            @using (Html.BeginForm("GenerateQRCode", "Home"))
            {
                <div class="col-6">
                    Code <input name="txtCode" class="form-control" type="text" />
                    <button type="submit" class="btn btn-primary">QR Code</button>
                </div>
            }
        </div>

    </div>
</div>
